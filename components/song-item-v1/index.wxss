/* components/song-item-v1/index.wxss */
.song-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.song-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.song-content {
  margin-left: 16rpx;
  flex: 1;
}

.song-name {
  font-size: 32rpx;
  color: #555555;
}

.song-source {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999999;
}

.song-icon {
  width: 50rpx;
  height: 50rpx;
}