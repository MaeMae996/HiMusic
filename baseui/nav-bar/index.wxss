/* baseui/nav-bar/index.wxss */
.nav-bar {
  color: #fff;
  display: flex;
  text-align: center;
  height: 44px;
  line-height: 44px;
}

.left,
.right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.left-arrow {
  display: none;
}

.left-slot:empty+.left-arrow {
  display: block;
}

.left .left-arrow .icon {
  width: 44rpx;
  display: block;
}

.center {
  flex: 1
}

.center-title {
  display: none;
}

.center-slot:empty+.center-title {
  display: block;
}