/* pages/music-search/index.wxss */
page {
  padding: 0 20rpx;
}

/* 热门搜索 */
.hot {
  padding: 10rpx;
}

.hot .keywords-list {
  display: flex;
  flex-wrap: wrap;
}

.hot .tag {
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}

.hot .tag:first-of-type {
  color: #26ce8a;
}

.suggest-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #26ce8a;
  padding: 20rpx;
}

.suggest-list .suggest-item {
  display: flex;
  align-items: center;
}

.suggest-icon {
  width: 66rpx;
  height: 66rpx;
}

.sugget-keywords {
  font-size: 28rpx;
}